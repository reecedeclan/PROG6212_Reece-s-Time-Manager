@{
    ViewData["Title"] = "ViewModules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #3498db;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .view-modules-page {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .grid {
        display: grid;
        grid-template-rows: auto auto;
        background-color: #ffffff;
        padding: 20px;
        box-sizing: border-box;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .label {
        font-family: "Roboto", sans-serif;
        font-size: 30px;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #000000;
    }

    .textbox {
        width: 592px;
        height: 306px;
        margin-bottom: 10px;
        box-sizing: border-box;
        text-align: center;
        font-size: 16px;
    }

    .button {
        width: 240px;
        height: 45px;
        font-size: 20px;
        margin-top: 10px;
        cursor: pointer;
        background-color: #4CAF50;
        color: #ffffff;
        border: none;
        border-radius: 3px;
    }

        .button:hover {
            background-color: #45a049;
        }
</style>

<div class="view-modules-page">
    <div class="grid">
        <label class="label" for="lblViewModulesHeading">View saved modules:</label>

        <textarea id="txbViewModules" class="textbox" disabled>
            @foreach (var moduleString in ViewBag.Modules)
            {
                @Html.Raw(moduleString + "\n")
            }
        </textarea>

        <button id="btnView" class="button" onclick="refreshView()">Press to refresh</button>
    </div>
</div>

<script>
    function refreshView() {
        alert("Refresh button clicked!");
    }
</script>
