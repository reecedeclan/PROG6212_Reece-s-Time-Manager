@{
    ViewData["Title"] = "LogStudyHours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Reece's Time Manager'</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PROG6212_ST10043367_FinalPOE.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #3498db;
            font-family: "Roboto", sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #333;
            z-index: 1000;
        }

        .form-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 360px;
            text-align: center;
            margin-top: 50px;
        }

        .dropdown {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 3px;
            text-align: center;
        }

        .label {
            font-family: "Roboto", sans-serif;
            font-size: 20px;
            font-style: italic;
            margin-bottom: 15px;
            color: #333333;
        }

        .textbox {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 3px;
            text-align: center;
        }


        .button {
            background-color: #4caf50;
            color: #ffffff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            width: 100%;
        }

            .button:hover {
                background-color: #45a049;
            }

        .format {
            font-size: 12px;
            color: #b3b3b3;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <form id="logStudyForm">
            <label class="label" for="lblLogStudyHoursHeading">Log your study hours:</label>
            <label class="format" for="lblSpacer">       </label>

            <label class="label" for="lblCode">Module code:</label>
            <select id="ddlModules" name="moduleCode" class="dropdown">
                @if (ViewBag.Modules != null)
                {
                    foreach (var module in ViewBag.Modules)
                    {
                        <option value="@module.Code">@module.Code - @module.Name</option>
                    }
                }
            </select>

            <label class="label" for="lblHours">Hours studied:</label>
            <input type="text" id="txtHours" class="textbox">

            <label class="label" for="lblDate">Date studied:</label>
            <input type="text" id="txtDate" class="textbox" placeholder="dd/MM/yyyy">

            <label class="format" for="lblFormat">Format: dd/MM/yyyy</label>

            <button type="button" id="btnLog" class="button" onclick="logStudyHours()">Save</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function logStudyHours() {
            var moduleCode = $("#ddlModules").val();
            var hoursStudied = parseFloat($("#txtHours").val());
            var dateStudied = $("#txtDate").val();

            var dateParts = dateStudied.split("/");
            var studyDate = new Date(dateParts[2], dateParts[1] - 1, dateParts[0]);

            if (!isNaN(studyDate.getTime())) {
                var formattedDate = studyDate.toLocaleDateString("en-GB");

                $.ajax({
                    type: "POST",
                    url: "/Users/DeductStudyHours",
                    data: {
                        moduleCode: moduleCode,
                        hoursStudied: hoursStudied,
                        studyDate: formattedDate
                    },
                    success: function (result) {
                        alert("Study hours logged!\nDate: " + formattedDate);
                    },
                    error: function (error) {
                        alert("Error logging study hours.");
                    }
                });
            } else {
                alert("Invalid date format. Please use dd/MM/yyyy.");
            }
        }
    </script>
</body>
</html>